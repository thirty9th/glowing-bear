<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_item_items_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/listview_item_items_container"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/dark_grey" >

        <TextView
            android:id="@+id/text_listview_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_tab"
            android:text="@string/placeholder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_listview_item_name"
            android:layout_toRightOf="@+id/text_listview_item_name"
            android:paddingLeft="@dimen/main_menu_padding"
            android:text="@string/quantity_identifier"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_listview_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_tab"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/placeholder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/listview_item_color_tag"
            android:layout_width="3dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/red_highlight"
            android:orientation="vertical" >
        </LinearLayout>

        <ImageView
            android:id="@+id/image_tab"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/main_menu_padding"
            android:layout_toRightOf="@+id/listview_item_color_tag"
            android:contentDescription="@string/listview_item_worksheets_icon_des"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_list_closed" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/listview_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/super_dark_grey"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>