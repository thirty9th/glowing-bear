<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_item_worksheets_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/listview_item_items_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/dark_grey" >

        <ImageView
            android:id="@+id/image_tab"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/main_menu_padding"
            android:layout_marginBottom="@dimen/main_menu_padding"
            android:layout_marginLeft="@dimen/main_menu_padding"
            android:layout_marginTop="@dimen/main_menu_padding"
            android:contentDescription="@string/listview_item_worksheets_icon_des"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_worksheets" />

        <TextView
            android:id="@+id/text_listview_worksheet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_tab"
            android:text="@string/placeholder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listview_item_worksheets_divider"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>