<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_worksheet_activity_initial_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_menu_padding" >

    <ScrollView
        android:id="@+id/scroll_welcome_message_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:orientation="vertical"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/text_welcome_message_worksheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/worksheet_activity_welcome_message"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </ScrollView>

</LinearLayout>