<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".MainActivity" >

    <LinearLayout
        android1:id="@+id/linear_layout_search_bar_wrapper"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentLeft="true"
        android1:background="@color/dark_grey"
        android1:minHeight="50dp"
        android1:padding="5dp" >

        <EditText
            android1:id="@+id/text_search_bar_field"
            android:inputType="text"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_weight="1"
            android1:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android1:id="@+id/button_search_bar_submit"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_weight="1"
            android:onClick="onClickSearch"
            android1:text="@string/search_button" />

    </LinearLayout>

</RelativeLayout>